enum TodoStatusEnum {
  COMPLETED
  ACTIVE
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  password String
  name    String?
  todo   Todo[]
}

model Todo {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  description     String
  status TodoStatusEnum
  author   User      @relation(fields: [authorId], references: [id])
  authorId String    @db.ObjectId
}

